<% user = find_user %>
<div>
  <div id ="show_left">
    <table id = "show_commodity">
      <tr>
        <td colspan = 2>
          <h2><%= @commodity.title %></h2>
        </td>
      </tr>
      <tr>
        <td> (By <%= @commodity.vendor.capitalize %>)</td>
      </tr>
      <tr>
        <% if @commodity.actual_price %>
        <td id = "actual_price">&#8377; <%= @commodity.actual_price %></td>
        <% end %>
        <% if @commodity.selling_price %>
        <td id = "selling_price">&#8377; <%= @commodity.selling_price %></td>
        <% end %>
      </tr>
      <tr>
        <td><br>Features: </td>
      </tr>
      <tr>
        <td colspan = 2>
          <% @commodity.features.split("\n").each do |feature| %>
          <%= feature %><br><br>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>

        </td>              
      </tr>
    </table>
  </div>
  <div id = "side_show">
    <div id = "slideshow">
      <% @commodity.images.each do |img| %>
      <%= image_tag img.photo.url(:small) %>
      <% end %>
    </div>
    <br>
    <br>
    <% if @commodity.selling_price %> 
      *Select Quantity, and click Buy
      <table id = "buy_at_show">
      <% @commodity.commodity_skus.each do |sku| %>
        <tr>
          <%= form_tag line_items_path(commodity_sku_id: sku) do %>
          <%= hidden_field_tag :commodity_sku_id, sku.id%>
            <% if sku.quantity %>
              <td>
                <%= select_tag :quantity, options_for_select((1..sku.quantity).to_a) %>
              </td>
            <% end %>
            
            <% unless sku.size.empty? %>
              <td>
                <%= sku.size %>
              </td>
            <% end %>
            
            <% unless sku.color.empty? %>
              <td>
                <%= sku.color %>
              </td>
            <% end %>
            <% unless user && user.admin %>
            <td>
              <%= submit_tag 'BUY' %>
            </td>
            <% end %>
          <% end %>
        </tr>
        <% end %>
      </table>
    <% end %>
    <br>
    <% if user && user.admin %>
      <%= link_to 'Edit', edit_commodity_path(@commodity) %>
      <%= link_to 'Delete', @commodity, :method => :delete, data: {confirm: "Are you sure?" } %>
    <% end %>
    <%= link_to 'Back', commodities_path %>
  </div>
</div>
<% unless @commodity.description.blank? %>
<div id = "commodity_description">
  <hr>
  <h4>Description:</h4>
  <p><%= @commodity.description %></p>
</div>
<% end %>