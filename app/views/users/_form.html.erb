<%= form_for(@user) do |f| %>
  <fieldset id = "signup">
    <legend>Please Enter Details</legend>
    <br>
    <table>
      <tr>
        <td>
          <%= f.label :user_name, 'Username' %>
        </td>
        <td>
          <% if @user.new_record? %>
            <%= f.text_field :user_name %>
            <% if @user.errors.get(:user_name) %>
              <div class = "field_with_errors"><%= @user.errors.get(:user_name).first %></div>
            <% end %>
          <% else %>
            <%= @user.user_name %>
          <% end %>
        </td>
      </tr>
      <% if @user.new_record? %>
      <tr>
        <td>
          <%= f.label :password %>
        </td>
        <td>
          <%= f.password_field :password %>
          <% if @user.errors.get(:password) %>
          <div class = "field_with_errors"><%= @user.errors.get(:password).first %></div>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :password_confirmation, 'Confirm Password' %>
        </td>
        <td>
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>
      <% end %>
      <tr>
        <td>
          <%= f.label :name %>
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :email %>
        </td>
        <td>
          <% if @user.new_record? %>
            <%= f.email_field :email %>
            <% if @user.errors.get(:email) %>
            <div class = "field_with_errors"><%= @user.errors.get(:email).first %></div>
            <% end %>
          <% else %>
            <%= @user.email %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :mobile_no, 'Mobile number' %>
        </td>
        <td>
          <%= f.text_field :mobile_no %>
          <% if @user.errors.get(:mobile_no) %>
          <div class = "field_with_errors"><%= @user.errors.get(:mobile_no).first %></div>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :wallet %>
        </td>
        <td>
          <% usr = User.find_by_id(session[:user_id]) %>
          <% if usr && (@user.admin === false) && usr.admin === true %>
            &#8377; <%= f.text_field :wallet %>
          <% else %>
            <%= number_to_currency(@user.wallet, :unit => '&#8377; ') %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit 'Submit' %></td>
      </tr>
  </table>
  </fieldset>
<% end %>